() {\n      const currentIsMobile = window.innerWidth < 768; // Tailwind's 'md' breakpoint\n      if (this.isMobile !== currentIsMobile) {\n        this.isMobile = currentIsMobile;\n        if (!this.isMobile) {\n          // If switching to desktop, ensure mobile sidebar is closed\n          this.sidebarOpenOnMobile = false;\n          // You might want to set a default desktop state here, e.g., expanded or collapsed\n          this.sidebarCollapsed = false; // Default to expanded on desktop\n        } else {\n          // If switching to mobile, ensure mobile sidebar starts closed\n          this.sidebarOpenOnMobile = false;\n          // On mobile, the sidebar is initially \"collapsed\" in terms of visibility (hidden)\n          this.sidebarCollapsed = true; // For icon-only display, if applicable\n        }\n      }\n    },\n    toggleSidebar() {\n      if (this.isMobile) {\n        this.sidebarOpenOnMobile = !this.sidebarOpenOnMobile; // Toggle mobile sidebar visibility\n      } else {\n        this.sidebarCollapsed = !this.sidebarCollapsed; // Toggle desktop sidebar collapse\n      }\n    }\n  },\n  created() {\n    if (!localStorage.getItem('loggedIn')) {\n      this.$router.push('/login');\n    }\n    this.handleResize(); // Set initial mobile state\n    window.addEventListener('resize', this.handleResize);\n  },\n  beforeUnmount() {\n    window.removeEventListener('resize', this.handleResize);\n  }\n};","map":{"version":3,"names":["dashboardIcon","payrollIcon","logoIcon","employeeDirectoryIcon","attendanceIcon","performanceReviewIcon","leaveRequestIcon","name","data","sidebarCollapsed","showMain","isMobile","sidebarOpenOnMobile","computed","isLoginPage","$route","path","transitionName","methods","logout","setTimeout","localStorage","clear","$router","push","$nextTick","window","history","pushState","location","href","addEventListener","preventBack","once","handleResize","currentIsMobile","innerWidth","toggleSidebar","created","getItem","beforeUnmount","remo