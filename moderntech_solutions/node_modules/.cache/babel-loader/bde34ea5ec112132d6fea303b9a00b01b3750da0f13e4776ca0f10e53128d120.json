{"ast":null,"code":"export default {\n  data() {\n    return {\n      employees: [],\n      loading: true,\n      error: null,\n      selectedEmployee: null\n    };\n  },\n  methods: {\n    showEmployee(emp) {\n      this.selectedEmployee = emp;\n    },\n    getEmployeePhoto(name) {\n      // Convert name to a file-friendly format, e.g. \"John Doe\" -> \"john_doe.jpg\"\n      if (!name) return require('@/assets/default.png');\n      const fileName = name.toLowerCase().replace(/[^a-z0-9]/g, '_').replace(/_+/g, '_').replace(/^_|_$/g, '') + '.jpg';\n      try {\n        return require(`@/assets/${fileName}`);\n      } catch (e) {\n        return require('@/assets/default.png');\n      }\n    }\n  },\n  mounted() {\n    fetch(\"https://zakariad007.github.io/employee/employee_info.json\").then(res => res.json()).then(data => {\n      this.employees = data.employeeInformation || [];\n      this.loading = false;\n    }).catch(() => {\n      this.error = \"Failed to load employee data.\";\n      this.loading = false;\n    });\n  }\n};","map":{"version":3,"names":["data","employees","loading","error","selectedEmployee","methods","showEmployee","emp","getEmployeePhoto","name","require","fileName","toLowerCase","replace","e","mounted","fetch","then","res","json","employeeInformation","catch"],"sources":["C:\\Users\\Student\\Documents\\Exercises\\Workshop\\Vue\\hr_system\\src\\views\\Employee_DirectoryView.vue"],"sourcesContent":["<template>\r\n  <div class=\"p-8\">\r\n    <h2 class=\"text-2xl font-bold mb-4\">Employee Directory</h2>\r\n    <table class=\"min-w-full bg-white rounded shadow\">\r\n      <thead>\r\n        <tr>\r\n          <th class=\"px-4 py-2 border-b\">Photo</th>\r\n          <th class=\"px-4 py-2 border-b\">ID</th>\r\n          <th class=\"px-4 py-2 border-b\">Name</th>\r\n          <th class=\"px-4 py-2 border-b\">Position</th>\r\n          <th class=\"px-4 py-2 border-b\">Department</th>\r\n        </tr>\r\n      </thead>\r\n      <tbody>\r\n        <tr\r\n          v-for=\"emp in employees\"\r\n          :key=\"emp.employeeId\"\r\n          @click=\"showEmployee(emp)\"\r\n          class=\"cursor-pointer hover:bg-gray-100\"\r\n        >\r\n          <td class=\"px-4 py-2 border-b\">\r\n            <img\r\n              :src=\"getEmployeePhoto(emp.name)\"\r\n              alt=\"Employee Photo\"\r\n              class=\"w-12 h-12 rounded-full object-cover\"\r\n            />\r\n          </td>\r\n          <td class=\"px-4 py-2 border-b\">{{ emp.employeeId }}</td>\r\n          <td class=\"px-4 py-2 border-b\">{{ emp.name }}</td>\r\n          <td class=\"px-4 py-2 border-b\">{{ emp.position }}</td>\r\n          <td class=\"px-4 py-2 border-b\">{{ emp.department }}</td>\r\n        </tr>\r\n      </tbody>\r\n    </table>\r\n    <div v-if=\"loading\" class=\"mt-4 text-gray-500\">Loading...</div>\r\n    <div v-if=\"error\" class=\"mt-4 text-red-500\">{{ error }}</div>\r\n\r\n    <!-- Modal for employee details -->\r\n    <div\r\n      v-if=\"selectedEmployee\"\r\n      class=\"fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-40\"\r\n      @click.self=\"selectedEmployee = null\"\r\n    >\r\n      <div class=\"bg-white rounded-2xl shadow-lg max-w-lg w-full p-8 relative\">\r\n        <button\r\n          class=\"absolute top-4 right-4 text-gray-400 hover:text-gray-600 text-2xl\"\r\n          @click=\"selectedEmployee = null\"\r\n          aria-label=\"Close\"\r\n        >&times;</button>\r\n        <h2 class=\"text-2xl font-bold mb-4\">{{ selectedEmployee.name }}</h2>\r\n        <table class=\"mb-4 w-full\">\r\n          <tbody>\r\n            <tr>\r\n              <td class=\"font-semibold pr-2\">ID:</td>\r\n              <td>{{ selectedEmployee.employeeId }}</td>\r\n            </tr>\r\n            <tr>\r\n              <td class=\"font-semibold pr-2\">Name:</td>\r\n              <td>{{ selectedEmployee.name }}</td>\r\n            </tr>\r\n            <tr>\r\n              <td class=\"font-semibold pr-2\">Position:</td>\r\n              <td>{{ selectedEmployee.position }}</td>\r\n            </tr>\r\n            <tr>\r\n              <td class=\"font-semibold pr-2\">Department:</td>\r\n              <td>{{ selectedEmployee.department }}</td>\r\n            </tr>\r\n            <tr>\r\n              <td class=\"font-semibold pr-2\">Salary:</td>\r\n              <td>{{ selectedEmployee.salary }}</td>\r\n            </tr>\r\n            <tr>\r\n              <td class=\"font-semibold pr-2\">Employment History:</td>\r\n              <td>\r\n                <div v-if=\"selectedEmployee.employmentHistory && selectedEmployee.employmentHistory.length\">\r\n                  <ul class=\"list-disc list-inside space-y-1\">\r\n                    <li v-for=\"(job, idx) in selectedEmployee.employmentHistory\" :key=\"idx\">\r\n                      <div>\r\n                        <strong>{{ job.position }}</strong>\r\n                        <span v-if=\"job.company\"> at {{ job.company }}</span>\r\n                        <span v-if=\"job.startDate\"> ({{ job.startDate }}</span>\r\n                        <span v-if=\"job.endDate\"> - {{ job.endDate }})</span>\r\n                        <span v-else-if=\"job.startDate\"> - Present)</span>\r\n                      </div>\r\n                      <div v-if=\"job.description\" class=\"text-sm text-gray-600\">{{ job.description }}</div>\r\n                    </li>\r\n                  </ul>\r\n                </div>\r\n                <span v-else>-</span>\r\n              </td>\r\n            </tr>\r\n            <tr>\r\n              <td class=\"font-semibold pr-2\">Contact:</td>\r\n              <td>{{ selectedEmployee.contact }}</td>\r\n            </tr>\r\n          </tbody>\r\n        </table>\r\n        <button\r\n          class=\"btn btn-primary w-full py-2 rounded bg-blue-600 text-white hover:bg-blue-700 mt-4\"\r\n          @click=\"selectedEmployee = null\"\r\n        >Close</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      employees: [],\r\n      loading: true,\r\n      error: null,\r\n      selectedEmployee: null,\r\n    };\r\n  },\r\n  methods: {\r\n    showEmployee(emp) {\r\n      this.selectedEmployee = emp;\r\n    },\r\n    getEmployeePhoto(name) {\r\n      // Convert name to a file-friendly format, e.g. \"John Doe\" -> \"john_doe.jpg\"\r\n      if (!name) return require('@/assets/default.png');\r\n      const fileName = name\r\n        .toLowerCase()\r\n        .replace(/[^a-z0-9]/g, '_')\r\n        .replace(/_+/g, '_')\r\n        .replace(/^_|_$/g, '') + '.jpg';\r\n      try {\r\n        return require(`@/assets/${fileName}`);\r\n      } catch (e) {\r\n        return require('@/assets/default.png');\r\n      }\r\n    },\r\n  },\r\n  mounted() {\r\n    fetch(\"https://zakariad007.github.io/employee/employee_info.json\")\r\n      .then(res => res.json())\r\n      .then(data => {\r\n        this.employees = data.employeeInformation || [];\r\n        this.loading = false;\r\n      })\r\n      .catch(() => {\r\n        this.error = \"Failed to load employee data.\";\r\n        this.loading = false;\r\n      });\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\ntable {\r\n  border-collapse: collapse;\r\n  width: 100%;\r\n}\r\nth, td {\r\n  text-align: left;\r\n  padding: 8px;\r\n}\r\nth {\r\n  background-color: #f2f2f2;\r\n}\r\ntr:hover {\r\n  background-color: #f5f5f5;\r\n}\r\nbutton{\r\n    cursor: pointer;\r\n}\r\n</style>"],"mappings":"AA4GA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE,IAAI;MACbC,KAAK,EAAE,IAAI;MACXC,gBAAgB,EAAE;IACpB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,YAAYA,CAACC,GAAG,EAAE;MAChB,IAAI,CAACH,gBAAe,GAAIG,GAAG;IAC7B,CAAC;IACDC,gBAAgBA,CAACC,IAAI,EAAE;MACrB;MACA,IAAI,CAACA,IAAI,EAAE,OAAOC,OAAO,CAAC,sBAAsB,CAAC;MACjD,MAAMC,QAAO,GAAIF,IAAG,CACjBG,WAAW,CAAC,EACZC,OAAO,CAAC,YAAY,EAAE,GAAG,EACzBA,OAAO,CAAC,KAAK,EAAE,GAAG,EAClBA,OAAO,CAAC,QAAQ