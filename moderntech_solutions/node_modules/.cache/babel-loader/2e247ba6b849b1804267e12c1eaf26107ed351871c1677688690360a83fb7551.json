entIsMobile;\n        // When switching to desktop from mobile, ensure sidebar is not forcibly open\n        if (!this.isMobile) {\n          this.sidebarOpenOnMobile = false; // Reset mobile open state\n          this.sidebarCollapsed = false; // Default to expanded on desktop\n        } else {\n          // On mobile, default to collapsed but visible (icons)\n          this.sidebarCollapsed = true;\n          this.sidebarOpenOnMobile = false; // Ensure it starts closed\n        }\n      }\n    },\n    toggleSidebar() {\n      if (this.isMobile) {\n        this.sidebarOpenOnMobile = !this.sidebarOpenOnMobile; // Toggle sidebar open/close on mobile\n      } else {\n        this.sidebarCollapsed = !this.sidebarCollapsed; // Toggle sidebar collapsed/expanded on desktop\n      }\n    }\n  },\n  created() {\n    if (!localStorage.getItem('loggedIn')) {\n      this.$router.push('/login');\n    }\n    this.handleResize(); // Set initial mobile state\n    window.addEventListener('resize', this.handleResize);\n  },\n  beforeUnmount() {\n    window.removeEventListener('resize', this.handleResize);\n  }\n};","map":{"version":3,"names":["name","data","sidebarCollapsed","showMain","isMobile","sidebarOpenOnMobile","dashboardIcon","URL","import","meta","url","href","payrollIcon","logoIcon","employeeDirectoryIcon","attendanceIcon","performanceReviewIcon","leaveRequestIcon","computed","isLoginPage","$route","path","transitionName","methods","logout","setTimeout","localStorage","clear","$router","push","$nextTick","window","history","pushState","location","addEventListener","preventBack","once","handleResize","currentIsMobile","innerWidth","toggleSidebar","created","getItem","beforeUnmount","removeEventListener"],"sources":["C:\\Users\\DELL\\Documents\\Exercises\\hr_system\\src\\App.vue"],"sourcesContent":["<template>\n  <div class=\"flex flex-col min-h-screen bg-gray-50\">\n    <div class=\"flex-grow flex\">\n      <aside v-if=\"!isLoginPage\" :class=\"['fixed top-0 left-0 h-full b