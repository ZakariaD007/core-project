{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.filter.js\";\nexport default {\n  data() {\n    return {\n      employees: [],\n      loading: true,\n      error: null,\n      selectedEmployee: null,\n      search: \"\",\n      showDirectory: false // Added for the transition\n    };\n  },\n  computed: {\n    filteredEmployees() {\n      if (!this.search) return this.employees;\n      return this.employees.filter(emp => emp.name.toLowerCase().includes(this.search.toLowerCase()));\n    }\n  },\n  methods: {\n    showEmployee(emp) {\n      this.selectedEmployee = emp;\n    }\n  },\n  mounted() {\n    this.showDirectory = true; // Triggers the \"zoom-in-enter\" for the directory content\n\n    fetch(\"https://zakariad007.github.io/employee/employee_info.json\").then(res => res.json()).then(data => {\n      this.employees = data.employeeInformation || [];\n      this.loading = false;\n    }).catch(() => {\n      this.error = \"Failed to load employee data.\";\n      this.loading = false;\n    });\n  }\n};","map":{"version":3,"names":["data","employees","loading","error","selectedEmployee","search","showDirectory","computed","filteredEmployees","filter","emp","name","toLowerCase","includes","methods","showEmployee","mounted","fetch","then","res","json","employeeInformation","catch"],"sources":["C:\\Users\\DELL\\Documents\\Exercises\\hr_system\\src\\views\\Employee_DirectoryView.vue"],"sourcesContent":["<template>\r\n  <div class=\"p-8 relative\">\r\n    <transition name=\"zoom-in\">\r\n      <div v-if=\"showDirectory\" :class=\"{ 'pointer-events-none select-none': selectedEmployee }\">\r\n        <div class=\"flex items-center justify-end mb-4\">\r\n          <input\r\n            v-model=\"search\"\r\n            type=\"text\"\r\n            placeholder=\"Enter employee name\"\r\n            class=\"border border-gray-300 rounded px-3 py-2 w-64 focus:outline-none focus:ring-2 focus:ring-blue-400\"\r\n          />\r\n        </div>\r\n        <h2 class=\"text-2xl font-bold mb-4\">Employee Directory</h2>\r\n        <table class=\"min-w-full bg-white rounded shadow\">\r\n          <thead>\r\n            <tr>\r\n              <th class=\"px-4 py-2 border-b\">Photo</th>\r\n              <th class=\"px-4 py-2 border-b\">ID</th>\r\n              <th class=\"px-4 py-2 border-b\">Name</th>\r\n              <th class=\"px-4 py-2 border-b\">Position</th>\r\n              <th class=\"px-4 py-2 border-b\">Department</th>\r\n            </tr>\r\n          </thead>\r\n          <tbody>\r\n            <tr\r\n              v-for=\"emp in filteredEmployees\"\r\n              :key=\"emp.employeeId\"\r\n              @click=\"showEmployee(emp)\"\r\n              class=\"cursor-pointer hover:bg-gray-100\"\r\n            >\r\n              <td class=\"px-4 py-2 border-b\">\r\n                <img\r\n                  v-if=\"emp.photo\"\r\n                  :src=\"emp.photo\"\r\n                  alt=\"Employee Photo\"\r\n                  class=\"w-12 h-12 rounded-full object-cover\"\r\n                />\r\n                <img v-else-if=\"emp.name === 'Sibongile Nkosi'\" src=\"@/assets/Sibongile Nkosi.jpg\" alt=\"Sibongile Nkosi\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Lungile Moyo'\" src=\"@/assets/Lungile Moyo.jpg\" alt=\"Lungile Moyo\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Thabo Molefe'\" src=\"@/assets/Thabo Molefe.jpg\" alt=\"Another Name\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Keshav Naidoo'\" src=\"@/assets/Keshav Naidoo.jpg\" alt=\"Another Name\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Zanele Khumalo'\" src=\"@/assets/Zanele Khumalo.jpg\" alt=\"Another Name\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Sipho Zulu'\" src=\"@/assets/Sipho Zulu.jpg\" alt=\"Another Name\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Naledi Moeketsi'\" src=\"@/assets/Naledi Moeketsi.jpg\" alt=\"Another Name\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Farai Gumbo'\" src=\"@/assets/Farai Gumbo.jpg\" alt=\"Another Name\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Karabo Dlamini'\" src=\"@/assets/Karabo Dlamini.jpg\" alt=\"Another Name\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <img v-else-if=\"emp.name === 'Fatima Patel'\" src=\"@/assets/Fatima Patel.jpg\" alt=\"Another Name\" class=\"w-12 h-12 rounded-full object-cover\" />\r\n                <span v-else class=\"inline-block w-12 h-12 rounded-full bg-gray-200 text-gray-400 flex items-center justify-center\"></span>\r\n              </td>\r\n              <td class=\"px-4 py-2 border-b\">{{ emp.employeeId }}</td>\r\n              <td class=\"px-4 py-2 border-b\">{{ emp.name }}</td>\r\n              <td class=\"px-4 py-2 border-b\">{{ emp.position }}</td>\r\n              <td class=\"px-4 py-2 border-b\">{{ emp.department }}</td>\r\n            </tr>\r\n          </tbody>\r\n        </table>\r\n        <div v-if=\"loading\" class=\"mt-4 text-gray-500\">Loading...</div>\r\n        <div v-if=\"error\" class=\"mt-4 text-red-500\">{{ error }}</div>\r\n      </div>\r\n    </transition>\r\n\r\n    <transition name=\"modal-zoom-fade\">\r\n      <div\r\n        v-if=\"selectedEmployee\"\r\n        class=\"fixed inset-0 z-50 flex items-center justify-center backdrop-blur-sm\"\r\n        style=\"background: rgba(0, 0, 0, 0.4);\"\r\n        @click.self=\"selectedEmployee = null\"\r\n      >\r\n        <div class=\"bg-white rounded-2xl shadow-lg max-w-lg w-full p-8 relative\">\r\n          <button\r\n            class=\"absolute top-4 right-4 text-gray-400 hover:text-gray-600 text-2xl\"\r\n            @click=\"selectedEmployee = null\"\r\n            aria-label=\"Close\"\r\n          >\r\n            &times;\r\n          </button>\r\n          <div class=\"flex flex-col items-center mb-4\">\r\n            <img v-if=\"selectedEmployee.name === 'Sibongile Nkosi'\" src=\"@/assets/Sibongile Nkosi.jpg\" alt=\"Sibongile Nkosi\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Lungile Moyo'\" src=\"@/assets/Lungile Moyo.jpg\" alt=\"Lungile Moyo\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Thabo Molefe'\" src=\"@/assets/Thabo Molefe.jpg\" alt=\"Thabo Molefe\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Keshav Naidoo'\" src=\"@/assets/Keshav Naidoo.jpg\" alt=\"Keshav Naidoo\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Zanele Khumalo'\" src=\"@/assets/Zanele Khumalo.jpg\" alt=\"Zanele Khumalo\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Sipho Zulu'\" src=\"@/assets/Sipho Zulu.jpg\" alt=\"Sipho Zulu\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Naledi Moeketsi'\" src=\"@/assets/Naledi Moeketsi.jpg\" alt=\"Naledi Moeketsi\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Farai Gumbo'\" src=\"@/assets/Farai Gumbo.jpg\" alt=\"Farai Gumbo\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Karabo Dlamini'\" src=\"@/assets/Karabo Dlamini.jpg\" alt=\"Karabo Dlamini\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <img v-else-if=\"selectedEmployee.name === 'Fatima Patel'\" src=\"@/assets/Fatima Patel.jpg\" alt=\"Fatima Patel\" class=\"w-20 h-20 rounded-full object-cover mb-2\" />\r\n            <span v-else class=\"inline-block w-20 h-20 rounded-full bg-gray-200 text-gray-400 flex items-center justify-center mb-2\"></span>\r\n            <h2 class=\"text-2xl font-bold\">{{ selectedEmployee.name }}</h2>\r\n          </div>\r\n          <table class=\"mb-4 w-full\">\r\n            <tbody>\r\n              <tr><td class=\"font-semibold pr-2\">ID:</td><td>{{ selectedEmployee.employeeId }}</td></tr>\r\n              <tr><td class=\"font-semibold pr-2\">Name:</td><td>{{ selectedEmployee.name }}</td></tr>\r\n              <tr><td class=\"font-semibold pr-2\">Position:</td><td>{{ selectedEmployee.position }}</td></tr>\r\n              <tr><td class=\"font-semibold pr-2\">Department:</td><td>{{ selectedEmployee.department }}</td></tr>\r\n              <tr><td class=\"font-semibold pr-2\">Salary:</td><td>{{ selectedEmployee.salary }}</td></tr>\r\n              <tr><td class=\"font-semibold pr-2\">Employment History:</td><td><span v-if=\"selectedEmployee.employmentHistory && typeof selectedEmployee.employmentHistory === 'string'\">{{ selectedEmployee.employmentHistory }}</span><span v-else>-</span></td></tr>\r\n              <tr><td class=\"font-semibold pr-2\">Contact:</td><td>{{ selectedEmployee.contact }}</td></tr>\r\n            </tbody>\r\n          </table>\r\n          <button class=\"w-full py-2 rounded bg-blue-600 text-white mt-4\" id=\"btn\" @click=\"selectedEmployee = null\">Close</button>\r\n        </div>\r\n      </div>\r\n    </transition>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      employees: [],\r\n      loading: true,\r\n      error: null,\r\n      selectedEmployee: null,\r\n      search: \"\",\r\n      showDirectory: false, // Added for the transition\r\n    };\r\n  },\r\n  computed: {\r\n    filteredEmployees() {\r\n      if (!this.search) return this.employees;\r\n      return this.employees.filter(emp =>\r\n        emp.name.toLowerCase().includes(this.search.toLowerCase())\r\n      );\r\n    },\r\n  },\r\n  methods: {\r\n    showEmployee(emp) {\r\n      this.selectedEmployee = emp;\r\n    },\r\n  },\r\n  mounted() {\r\n    this.showDirectory = true; // Triggers the \"zoom-in-enter\" for the directory content\r\n\r\n    fetch(\"https://zakariad007.github.io/employee/employee_info.json\")\r\n      .then(res => res.json())\r\n      .then((data) => {\r\n        this.employees = data.employeeInformation || [];\r\n        this.loading = false;\r\n      })\r\n      .catch(() => {\r\n        this.error = \"Failed to load employee data.\";\r\n        this.loading = false;\r\n      });\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* ... existing styles ... */\r\n\r\n/* New zoom-in transition styles (copied from your dashboard example) */\r\n.zoom-in-enter-active,\r\n.zoom-in-leave-active {\r\n  transition: transform 1.5s cubic-bezier(.4, 2, .6, 1), opacity 1.5s;\r\n}\r\n\r\n.zoom-in-enter-from {\r\n  transform: scale(0.5);\r\n  opacity: 0;\r\n}\r\n\r\n.zoom-in-leave-to {\r\n  transform: scale(0.5); /* Zooms out to 50% size */\r\n  opacity: 0; /* Fades out completely */\r\n}\r\n</style>"],"mappings":";;AA6GA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE,IAAI;MACbC,KAAK,EAAE,IAAI;MACXC,gBAAgB,EAAE,IAAI;MACtBC,MAAM,EAAE,EAAE;MACVC,aAAa,EAAE,KAAK,CAAE;IACxB,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,iBAAiBA,CAAA,EAAG;MAClB,IAAI,CAAC,IAAI,CAACH,MAAM,EAAE,OAAO,IAAI,CAACJ,SAAS;MACvC,OAAO,IAAI,CAACA,SAAS,CAACQ,MAAM,CAACC,GAAE,IAC7BA,GAAG,CAACC,IAAI,CAACC,WAAW,CAAC,CAAC,CAACC,QAAQ,CAAC,IAAI,CAACR,MAAM,CAACO,WAAW,CAAC,CAAC,CAC3D,CAAC;IACH;EACF,CAAC;EACDE,OAAO,EAAE;IACPC,YAAYA,CAACL,GAAG,EAAE;MAChB,IAAI,CAACN,gBAAe,GAAIM,GAAG;IAC7B;EACF,CAAC;EACDM,OAAOA,CAAA,EAAG;IACR,IAAI,CAACV,aAAY,GAAI,IAAI,EAAE;;IAE3BW,KAAK,CAAC,2DAA2D,EAC9DC,IAAI,CAACC,GAAE,IAAKA,GAAG,CAACC,IAAI,CAAC,CAAC,EACtBF,IAAI,CAAElB,IAAI,IAAK;MACd,IAAI,CAA