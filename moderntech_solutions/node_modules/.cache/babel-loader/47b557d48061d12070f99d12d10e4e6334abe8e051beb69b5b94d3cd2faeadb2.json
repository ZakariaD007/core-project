pan v-if=\"modalData.attendance === 'Present'\" class=\"text-green-500\">&#x2713; Present</span>\r\n            <span v-if=\"modalData.attendance === 'Absent'\" class=\"text-red-500\">&#x2717; Absent</span>\r\n          </span>\r\n        </p>\r\n\r\n        <p class=\"font-bold\">Date:</p>\r\n        <p class=\"mb-4\">{{ modalData.date }}</p>\r\n\r\n        <p class=\"font-bold\">Leave Request Status:</p>\r\n        <p :class=\"{\r\n              'text-green-500': modalData.leaveRequest.status === 'Approved',\r\n              'text-yellow-500': modalData.leaveRequest.status === 'Pending',\r\n              'text-red-500': modalData.leaveRequest.status === 'Denied'\r\n            }\"\r\n        >\r\n          {{ modalData.leaveRequest.status }}\r\n        </p>\r\n\r\n        <p v-if=\"modalData.leaveRequest.reason\" class=\"font-bold mt-4\">Leave Reason:</p>\r\n        <p v-if=\"modalData.leaveRequest.reason\" class=\"mb-4\">{{ modalData.leaveRequest.reason }}</p>\r\n\r\n        <button \r\n          @click=\"closeModal\" \r\n          class=\"bg-teal-500 text-white px-4 py-2 rounded-lg mt-4 w-full hover:bg-teal-600\"\r\n        >\r\n          Close\r\n        </button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'AttendanceView',\r\n  data() {\r\n    return {\r\n      attendanceData: [],  // To store the fetched attendance data\r\n      showModal: false,     // Control modal visibility\r\n      modalData: {}         // Data to show in the modal\r\n    };\r\n  },\r\n  mounted() {\r\n    this.fetchAttendanceData(); // Fetch data when component is mounted\r\n  },\r\n  methods: {\r\n    // Fetch attendance data from the API\r\n    async fetchAttendanceData() {\r\n      try {\r\n        const response = await fetch('https://zakariad007.github.io/attendance/attendance.json');\r\n        const data = await response.json();\r\n        \r\n        // Assuming the data structure has an \"attendance\" field to hold the employee data\r\n        this.attendanceData = data.attendance; // Adjust if the structure is different\r\n      } catch (error) {\r\n        console.error(\"Error fetching attendance data:\", error);\r\n      }\r\n    },\r\n\r\n    // Open the modal with employee details\r\n    openModal(attendance) {\r\n      this.modalData = attendance;  // Set the modalData to the clicked employee's data\r\n      this.showModal = true;         // Show the modal\r\n    },\r\n\r\n    // Close the modal\r\n    closeModal() {\r\n      this.showModal = false;        // Hide the modal\r\n      this.modalData = {};           // Clear the modal data\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Add custom modal styles if necessary */\r\n</style>\r\n"],"mappings":"AAoFA,eAAe;EACbA,IAAI,EAAE,gBAAgB;EACtBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,cAAc,EAAE,EAAE;MAAG;MACrBC,SAAS,EAAE,KAAK;MAAM;MACtBC,SAAS,EAAE,CAAC,EAAU;IACxB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,mBAAmB,CAAC,CAAC,EAAE;EAC9B,CAAC;EACDC,OAAO,EAAE;IACP;IACA,MAAMD,mBAAmBA,CAAA,EAAG;MAC1B,IAAI;QACF,MAAME,QAAO,GAAI,MAAMC,KAAK,CAAC,0DAA0D,CAAC;QACxF,MAAMR,IAAG,GAAI,MAAMO,QAAQ,CAACE,IAAI,CAAC,CAAC;;QAElC;QACA,IAAI,CAACR,cAAa,GAAID,IAAI,CAACU,UAAU,EAAE;MACzC,EAAE,OAAOC,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,iCAAiC,EAAEA,KAAK,CAAC;MACzD;IACF,CAAC;IAED;IACAE,SAASA,CAACH,UAAU,EAAE;MACpB,IAAI,CAACP,SAAQ,GAAIO,UAAU,EAAG;MAC9B,IAAI,CAACR,SAAQ,GAAI,IAAI,EAAU;IACjC,CAAC;IAED;IACAY,UAAUA,CAAA,EAAG;MACX,IAAI,CAACZ,SAAQ,GAAI,KAAK,EAAS;MAC/B,IAAI,CAACC,SAAQ,GAAI,CAAC,CAAC,EAAY;IACjC;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}