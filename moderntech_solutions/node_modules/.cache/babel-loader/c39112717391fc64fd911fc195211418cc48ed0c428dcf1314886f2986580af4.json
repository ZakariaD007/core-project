{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  data() {\n    return {\n      username: '',\n      password: '',\n      errorMessage: '',\n      showLogin: true\n    };\n  },\n  methods: {\n    handleLogin() {\n      const validUsername = 'admin';\n      const validPassword = 'password123';\n      if (this.username === validUsername && this.password === validPassword) {\n        this.errorMessage = '';\n        this.showLogin = false;\n        setTimeout(() => {\n          this.$router.push('/dashboard');\n        }, 700); // Match the transition duration\n      } else {\n        this.errorMessage = 'Incorrect username or password.';\n      }\n    }\n  }\n};","map":{"version":3,"names":["data","username","password","errorMessage","showLogin","methods","handleLogin","validUsername","validPassword","setTimeout","$router","push"],"sources":["C:\\Users\\DELL\\Documents\\Exercises\\hr_system\\src\\views\\LoginView.vue"],"sourcesContent":["<template>\r\n    <div class=\"relative min-h-screen overflow-hidden\">\r\n        <!-- Animated Banner Background -->\r\n        <div class=\"absolute inset-0 z-0 pointer-events-none\">\r\n            <div class=\"w-full h-full animate-banner bg-gradient-to-r from-[#e76e37] via-[#f08331] to-[#ff2d55] opacity-70\"></div>\r\n            <svg class=\"absolute top-0 left-0 w-full h-full opacity-80\" style=\"z-index:1;\" xmlns=\"http://www.w3.org/2000/svg\">\r\n                <defs>\r\n                    <linearGradient id=\"bannerGradient\" x1=\"0\" y1=\"0\" x2=\"1\" y2=\"1\">\r\n                        <stop offset=\"0%\" stop-color=\"#e76e37\" />\r\n                        <stop offset=\"50%\" stop-color=\"#f08331\" />\r\n                        <stop offset=\"100%\" stop-color=\"#ff2d55\" />\r\n                    </linearGradient>\r\n                </defs>\r\n                <ellipse cx=\"15%\" cy=\"25%\" rx=\"180\" ry=\"90\" fill=\"url(#bannerGradient)\">\r\n                    <animate attribu